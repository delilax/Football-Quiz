<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeQ"
    android:background="@drawable/playbackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/linearLayout11">

        <ImageButton
            android:id="@+id/questionsHint1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/infoicon"
            android:contentDescription="@string/image_description"
            android:onClick="hintsQuestions"
            android:text="" />

        <ImageButton
            android:id="@+id/questionsHint2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/halficon"
            android:contentDescription="@string/image_description"
            android:onClick="hintsQuestions"
            android:text="" />

        <ImageButton
            android:id="@+id/questionsHint3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/correcticon"
            android:contentDescription="@string/image_description"
            android:onClick="hintsQuestions"
            android:text="" />

        <ImageButton
            android:id="@+id/adsButtonQ"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/adsicon"
            android:contentDescription="@string/image_description"
            android:text="" />

    </LinearLayout>

    <TextView
        android:id="@+id/questionProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="24sp"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/linearLayout11" />

    <TextView
        android:id="@+id/hintsQuestionAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="24sp"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:text="@string/hints"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        ads:layout_constraintRight_toLeftOf="@+id/hintsQuestionAll"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        ads:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/dryquestions"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        ads:layout_constraintBottom_toTopOf="@+id/linearLayout14"
        android:layout_marginTop="8dp"
        ads:layout_constraintTop_toBottomOf="@+id/linearLayout11" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout14"
        android:layout_marginRight="8dp"
        ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="32dp"
        ads:layout_constraintBottom_toTopOf="@+id/banner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dryanswer2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginEnd="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="odgovorKlik"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dryanswer1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="odgovorKlik"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dryanswer4"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginEnd="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="odgovorKlik"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dryanswer3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="odgovorKlik"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/test_banner"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent">

    </com.google.android.gms.ads.AdView>

</android.support.constraint.ConstraintLayout>